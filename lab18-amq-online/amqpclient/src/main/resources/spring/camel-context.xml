<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:cxf="http://camel.apache.org/schema/cxf"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       ">

    <camelContext id="amqpclient" xmlns="http://camel.apache.org/schema/spring">

		<rest id="restsvc"  path="/restsvc">
			<get id="get-ping" uri="/ping">
				<route id="get-pring-route">
					<setBody>
						<method ref="myTransformer" />
					</setBody>
				</route>
			</get>
		</rest>

        <route id="http-receiver">
            <from id="http-receiver-starter" uri="servlet://ping" />
            <setHeader headerName="Content-Type">
                <constant>application/json</constant>
            </setHeader>
            <setBody>
                <constant>{"msg" : "HELLO"}</constant>
            </setBody>
            <inOnly uri="amqp:topic:ACCOUNT"/>
        </route>

        <route id="amqpclient-sample-route">
            <from id="amqpclient-sample-route-starter" uri="{{CONSUMERURI}}"/>
            <log id="log-body" message=">>> ${body}"/>
        </route>
    </camelContext>

</beans>